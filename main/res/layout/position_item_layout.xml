<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center|clip_vertical|center_horizontal">

        <LinearLayout
            android:id="@+id/linearLayout_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center|center_horizontal|center_vertical"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView3_position_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/full_round_corner_bg_text_color"
                android:gravity="center"
                android:padding="10dp"
                android:text="1" />

            <TextView
                android:id="@+id/textView5_name_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="10dp"
                android:text="Name" />

            <TextView
                android:id="@+id/textView_score_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:padding="10dp"
                android:text="score" />

            <ImageView
                android:id="@+id/imageView4_prize_item"
                android:layout_width="100dp"
                android:layout_height="50dp"
                app:srcCompat="@android:drawable/screen_background_light" />
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>