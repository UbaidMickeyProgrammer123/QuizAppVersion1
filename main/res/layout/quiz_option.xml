<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/bg">

    <TextView
        android:id="@+id/textView_App_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="36dp"
        android:fontFamily="@font/archivo_black"
        android:padding="16dp"
        android:text="QuizApp"
        android:textColor="#b14c5c"
        android:textSize="30sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/start_user_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/square_btn_corner_bg_text_color"
            android:fontFamily="@font/alfa_slab_one"
            android:padding="16dp"
            android:text="User"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="@color/bg_purple" />

        <Button
            android:id="@+id/check_admin_btn_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:background="@drawable/square_btn_corner_bg_text_color"
            android:fontFamily="@font/alfa_slab_one"
            android:padding="16dp"
            android:text="Admin"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            app:backgroundTint="@color/bg_purple" />

    </LinearLayout>

</LinearLayout>
